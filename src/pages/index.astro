---
import { getCollection } from "astro:content";

import Layout from "../layouts/Layout.astro";

const links = await getCollection("links");
---

<Layout showTitle={false}>
	<div class="container mx-auto">
		<header class="mt-8 mb-10">
			<h1 class="text-8xl font-bold tracking-tighter">
				My Friends Call Me Pie
			</h1>
		</header>
		<section class="flex gap-4">
			{
				links.map(({ id, data: { title, description, url } }) => (
					<article>
						<a href={url} target="_blank">
							<h3 class="text-2xl font-semibold tracking-tight">{title}</h3>
							<p class="text-gray-600">{description}</p>
						</a>
					</article>
				))
			}
		</section>
	</div>
</Layout>
